def is_sorted(arr):
    """
    Проверяет, отсортирован ли массив по возрастанию рекурсивно
    """
    if len(arr) <= 1:
        return True
    else:
        return arr[0] <= arr[1] and is_sorted(arr[1:])

# Пример использования
print("Вариант 9 - Проверка отсортированности массива:")
print(f"[1, 2, 3, 4, 5] -> {is_sorted([1, 2, 3, 4, 5])}")
print(f"[1, 3, 2, 4, 5] -> {is_sorted([1, 3, 2, 4, 5])}")
print(f"[5, 4, 3, 2, 1] -> {is_sorted([5, 4, 3, 2, 1])}")
