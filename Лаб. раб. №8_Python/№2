def power(x, n):
    """
    Вычисляет x в степени n рекурсивно
    """
    if n == 0:
        return 1
    elif n < 0:
        return 1 / power(x, -n)
    else:
        return x * power(x, n - 1)

# Пример использования
print("Вариант 2 - Степень числа:")
print(f"2^5 = {power(2, 5)}")
print(f"3^4 = {power(3, 4)}")
print(f"5^-2 = {power(5, -2)}")
